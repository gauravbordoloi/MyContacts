<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmonetix.mycontacts.CreateNewContact">

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/et_name_add_new"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/et_email_add_new"
        android:layout_below="@+id/et_name_add_new"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/et_phone_add_new"
        android:layout_below="@+id/et_email_add_new"
        android:hint="Phone Number"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:layout_margin="16dp"
        android:id="@+id/save_contact"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
